<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailReadCommandSurfaceExtension">
  <Id>12345678-1234-5678-90ab-cdefabcd1234</Id>
  <DisplayName DefaultValue="SMC: Save Email to Booking"/>
  <ProviderName DefaultValue="Specialist Mind Care"/>
  <DefaultLocale>en-US</DefaultLocale>

  <Hosts>
    <Host xsi:type="MailHost"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.10">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteItem</Permissions>

  <AppDomains>
    <AppDomain>https://delightful-water-09c75de00.3.azurestaticapps.net</AppDomain>
  </AppDomains>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="grpSaveEmail" label="Bookings">
                <Control xsi:type="Button" id="btnSaveToBooking">
                  <Label resid="ButtonLabel"/>
                  <Action xsi:type="ShowTaskPane">
                    <SourceLocation resid="TaskpaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Urls>
        <bt:Url id="TaskpaneUrl" DefaultValue="https://delightful-water-09c75de00.3.azurestaticapps.net/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="ButtonLabel" DefaultValue="Save to booking"/>
      </bt:ShortStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>

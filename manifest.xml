<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appframework/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp" Version="1.1"
           ProviderName="Specialist Mind Care"
           Id="e6a0b5e6-9876-4cde-8abc-abcdefabcdef"
           DisplayName="SMC: Save Email to Booking"
           DefaultLocale="en-US">
  <Hosts><Host Name="Mailbox"/></Hosts>
  <Requirements><Sets DefaultMinVersion="1.10"><Set Name="Mailbox"/></Sets></Requirements>

  <AppDomains>
    <AppDomain>https://delightful-water-09c75de00.3.azurestaticapps.net</AppDomain>
  </AppDomains>

  <Permissions>ReadWriteItem</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="FunctionFileUrl"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="grpSaveEmail" label="Bookings">
                <Control xsi:type="Button" id="btnSaveToBooking">
                  <Label resid="ButtonLabel"/>
                  <Supertip>
                    <Title resid="ButtonTitle"/>
                    <Description resid="ButtonDescription"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>onShowSaveEmail</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Urls xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <bt:Url id="TaskpaneUrl" DefaultValue="https://delightful-water-09c75de00.3.azurestaticapps.net/taskpane.html"/>
        <bt:Url id="FunctionFileUrl" DefaultValue="https://delightful-water-09c75de00.3.azurestaticapps.net/commands.js"/>
      </bt:Urls>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://delightful-water-09c75de00.3.azurestaticapps.net/assets/icon_return.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://delightful-water-09c75de00.3.azurestaticapps.net/assets/icon_return.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://delightful-water-09c75de00.3.azurestaticapps.net/assets/icon_return.png"/>
      </bt:Images>
      <bt:ShortStrings>
        <bt:String id="ButtonLabel" DefaultValue="Save to booking"/>
        <bt:String id="ButtonTitle" DefaultValue="Save Email to Booking"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="ButtonDescription" DefaultValue="Save the current email to the booking system"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>

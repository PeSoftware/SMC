
<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appframework/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp" Version="1.1"
           ProviderName="Specialist Mind Care"
           Id="e6a0b5e6-9876-4cde-8abc-abcdefabcdef"
           DisplayName="SMC: Save Email to Booking"
           DefaultLocale="en-US">
  <Hosts><Host Name="Mailbox"/></Hosts>
  <Requirements><Sets DefaultMinVersion="1.10"><Set Name="Mailbox"/></Sets></Requirements>

  <AppDomains>
    <AppDomain>https://delightful-water-09c75de00.3.azurestaticapps.net</AppDomain>
  </AppDomains>

  <Resources>
    <bt:Urls xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
      <bt:Url id="TaskpaneUrl" DefaultValue="https://delightful-water-09c75de00.3.azurestaticapps.net/taskpane.html"/>
      <bt:Url id="FunctionFileUrl" DefaultValue="https://delightful-water-09c75de00.3.azurestaticapps.net/commands.js"/>
    </bt:Urls>
  </Resources>

  <Extensions>
    <ExtensionPoint xsi:type="MessageReadCommandSurface">
      <OfficeTab id="TabDefault">
        <Group id="grpSaveEmail" label="Bookings">
          <Control xsi:type="Button" id="btnSaveToBooking"
                   label="Save to booking" icon="https://delightful-water-09c75de00.3.azurestaticapps.net/assets/icon_return.png"
                   onClick="onShowSaveEmail"/>
        </Group>
      </OfficeTab>
    </ExtensionPoint>
  </Extensions>

  <Permissions>ReadWriteItem</Permissions>
</OfficeApp>
